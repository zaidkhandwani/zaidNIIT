<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<!-- Executed when webFlow is triggered -->
	<on-start>
		<evaluate expression="handler.initFlow()" result="flowScope.User" />
	</on-start>

		<view-state id="start" view="register" model="flowScope.User">
		<transition on="submit" to="confirm" />
	</view-state>

	

	<view-state id="confirm" view="confirm" model="flowScope.User">
		<transition on="edit" to="start" />
		<transition on="submit" to="addUser" />
	</view-state>
	
	
	<action-state id="addUser">
		<evaluate expression="userController.addUser(User)"></evaluate>
		<transition on="success" to="regsuccess" />
	</action-state>
	
	<end-state id="regsuccess" view="regsuccess" />

	
</flow>